[Unit]
Description=Nexus Repository Manager
After=network.target

[Service]
Type=forking
LimitNOFILE=65536
User={{ nexus_user }}
Group={{ nexus_group }}
ExecStart={{ nexus_home }}/nexus/bin/nexus start
ExecStop={{ nexus_home }}/nexus/bin/nexus stop
Restart=on-abort

[Install]
WantedBy=multi-user.target
